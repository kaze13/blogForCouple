<% post.comments.forEach(function (comment, index) { %>
<hr>

<div style="padding-left:4em">
    <p><img src="<%= comment.head %>" class="l_head"/><a href="<%= comment.website %>"><%= comment.name %></a>
        <span class="info"> Replied at <%= comment.time %></span></p>

    <p><%- comment.content %></p>
</div>
<% }) %>

<hr>
<div id="comment_form">
    <form class="form-horizontal" role="form" method="post">
        <div class="common-form-group">
            <% if (user) { %>



            <div class="form-group">
                <label for="name_comment" class="col-sm-2 control-label">Name</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" name="name" value="<%= user.name %>" id="name_comment">
                </div>
            </div>
            <div class="form-group">
                <label for="email_comment" class="col-sm-2 control-label">E-mail</label>

                <div class="col-sm-10">
                    <input type="email" class="form-control" name="email" value="<%= user.email %>" id="email_comment">
                </div>
            </div>

            <% } else { %>

            <div class="form-group">
                <label for="name_comment" class="col-sm-2 control-label">Name</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" name="name" id="name_comment">
                </div>
            </div>
            <div class="form-group">
                <label for="email_comment" class="col-sm-2 control-label">E-mail</label>

                <div class="col-sm-10">
                    <input type="email" class="form-control" name="email" id="email_comment">
                </div>
            </div>

            <% } %>
        </div>
        <textarea name="content" class="form-control" rows="5" cols="80"></textarea>
        <button type="submit" id="comment_btn" class="common-submit-btn btn btn-primary">Comment</button>
    </form>
</div>


